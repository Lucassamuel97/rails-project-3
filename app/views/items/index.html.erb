<% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
<% end %>


<div class="center">
  <h1>Items</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Done</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.description %></td>
        <td><%= item.done %></td>
        <td>
          <%= link_to 'Show', item, :class=>("btn btn-info text-white") %>
          <%= link_to 'Edit', edit_item_path(item), :class=>("btn btn-success text-white") %>
          <%= link_to 'Destroy', item, :class=>("btn btn-danger text-white"), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, :class=>("btn btn-info text-white") %>
